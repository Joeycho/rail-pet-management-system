<%= form_for @user, url: login_path, method: :post do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.submit "log in" %>
  Or <%= link_to('Login with Facebook', '/auth/facebook') %>
  Or <%= link_to(controller: 'owners', action: 'new') { 'sign up' } %>
<% end %>
